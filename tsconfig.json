{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "packages",
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist", 
    "*.d.ts"
  ],
  "types": [
    "node",
    "jest",
  ]
}
