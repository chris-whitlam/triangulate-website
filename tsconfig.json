{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "packages",
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": [
    "**/node_modules",
  ],
  "types": [
    "node",
    "jest",
  ]
}
