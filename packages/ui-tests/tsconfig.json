{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "cypress", "."],
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["**/*.ts"]
}
